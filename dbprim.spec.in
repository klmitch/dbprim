%prep
%setup -q

%build
%configure
make
make doxygen-doc

%install
%clean_build_root
make DESTDIR=${RPM_BUILD_ROOT} install

%clean
%clean_build_root
%clean_build_dir

%post -p /sbin/ldconfig

%postun -p /sbin/ldconfig

%files
%defattr(-, root, root)
%doc COPYING INSTALL
%{_libdir}/lib*.so.*
%{_libdir}/lib*.so

%files devel
%defattr(-, root, root)
%doc COPYING INSTALL docs
%{_includedir}/dbprim
%{_libdir}/lib*.la
%{_libdir}/lib*.a
%{_libdir}/pkgconfig/dbprim.pc
